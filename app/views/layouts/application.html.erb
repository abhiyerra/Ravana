<!DOCTYPE html>
<html>
  <head>
    <title>Ravana</title>

    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'blueprint/print', :media => 'print' %>
    <!--[if lt IE 8]>
      <%= stylesheet_link_tag 'blueprint/ie', :media => 'screen, projection' %>
    <![endif]--> 
    <%= stylesheet_link_tag 'ravana' %>

    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div class="container">
      <div class="span-24 header">
        <h1><%= link_to 'Ravana', root_url %></h1>

        <% if user_signed_in? %>
          <div class="login-box">
          </div>

          <%= render :partial => "torrents/search_box" %>

          <ul id="header-menu">
            <li><%= link_to 'Categories', categories_url %></li>
            <li><%= link_to 'Upload', new_torrent_url %></li>
          </ul>
        <% end %>
      </div>

      <% if notice || alert %>
        <div class="span-24" id="messages">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

      <div class="span-24">
        <%= yield %>
      </div>

      <% if user_signed_in? %>
        <div class="span-24 footer">
          <ul id="footer-menu">
            <li><%= link_to 'TrackerPeer', new_tracker_peer_url %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </body>
</html>
