<div class="span-24">
  <%= form_for :torrent, :url => { :action => 'create' }, :html => { :multipart => true } do |f| %>
  <p>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, :class => 'title' %>
  </p>

  <p>
    <%= f.label :category %>
    <br>
    <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] }, :class => 'title' %>
  </p>

  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :file %>
    <br>
    <%= f.file_field :torrent, :accept => "*.torrent" %>
  </p>

  <%= submit_tag 'Upload' %>
<% end %>
</div>

